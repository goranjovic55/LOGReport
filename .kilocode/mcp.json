{
  "mcpServers": {
    "project_memory": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-memory"
      ],
      "env": {
        "MEMORY_FILE_PATH": "${workspaceFolder}/project_memory.json"
      },
      "alwaysAllow": [
        "create_entities",
        "create_relations",
        "delete_entities",
        "delete_relations",
        "delete_observations",
        "open_nodes",
        "memory",
        "add_observations",
        "read_graph",
        "search_nodes"
      ],
      "disabled": false
    },
    "mcp-code-graph": {
      "command": "npx",
      "args": [
        "-y",
        "mcp-code-graph@latest"
      ],
      "env": {
        "CODEGPT_API_KEY": "sk-3f80b540-1a0c-4809-8335-eeea5f7d964a",
        "CODEGPT_ORG_ID": "08e85a15-51d0-48fc-93a1-3bcc345f7693",
        "CODEGPT_GRAPH_ID": "1f6e8518-59dd-4d6a-a44b-18e2a65788a0"
      },
      "alwaysAllow": [
        "find-direct-connections",
        "docs-semantic-search",
        "folder-tree-structure",
        "get-usage-dependency-links",
        "get-code",
        "get_usage_dependency_links",
        "find_direct_connections",
        "nodes-semantic-search"
      ],
      "disabled": false
    },
    "deepwiki": {
      "url": "https://mcp.deepwiki.com/sse",
      "disabled": false,
      "alwaysAllow": [
        "ask_question",
        "read_wiki_structure",
        "read_wiki_contents"
      ]
    }
  }
}