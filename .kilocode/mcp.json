{
  "mcpServers": {
    "project_memory": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-memory"
      ],
      "env": {
        "MEMORY_FILE_PATH": "${workspaceFolder}/project_memory.json"
      },
      "alwaysAllow": [
        "create_entities",
        "create_relations",
        "add_observations",
        "delete_entities",
        "delete_relations",
        "delete_observations",
        "search_nodes",
        "open_nodes",
        "memory"
      ],
      "disabled": false
    },
    "codegraph_mcp": {
      "command": "uvx",
      "args": [
        "code-graph-mcp"
      ],
      "disabled": false,
      "alwaysAllow": [
        "analyze_codebase",
        "get_usage_guide",
        "find_definition",
        "find_references",
        "find_callers",
        "find_callees",
        "complexity_analysis",
        "dependency_analysis",
        "project_statistics"
      ],
      "timeout": 60
    }
  }
}