{
  "mcpServers": {
    "project_memory": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-memory"
      ],
      "env": {
        "MEMORY_FILE_PATH": "${workspaceFolder}/project_memory.json"
      },
      "alwaysAllow": [
        "create_entities",
        "create_relations",
        "delete_entities",
        "delete_relations",
        "delete_observations",
        "open_nodes",
        "memory",
        "add_observations",
        "search_nodes",
        "read_graph"
      ],
      "disabled": false
    },
    "mcp-code-graph": {
      "command": "npx",
      "args": [
        "-y",
        "mcp-code-graph@latest"
      ],
      "env": {
        "CODEGPT_API_KEY": "sk-3f80b540-1a0c-4809-8335-eeea5f7d964a",
        "CODEGPT_ORG_ID": "08e85a15-51d0-48fc-93a1-3bcc345f7693",
        "CODEGPT_GRAPH_ID": "0a29770f-3c24-4638-999c-07b65d5c59b1"
      },
      "alwaysAllow": [
        "find-direct-connections",
        "nodes-semantic-search",
        "docs-semantic-search",
        "folder-tree-structure",
        "get-usage-dependency-links",
        "list-graphs",
        "get-code",
        "get_usage_dependency_links",
        "analyze_codebase"
      ],
      "disabled": false
    }
  }
}