{
  "mcpServers": {
    "firecrawl_mcp": {
      "command": "npx",
      "args": [
        "-y",
        "firecrawl-mcp@latest"
      ],
      "env": {
        "FIRECRAWL_API_KEY": "your_api_key_here"
      },
      "alwaysAllow": [
        "document_search",
        "web_search",
        "structured_extraction",
        "deep_research"
      ],
      "disabled": false
    },
    "project_memory": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-memory"
      ],
      "env": {
        "MEMORY_FILE_PATH": "${workspaceFolder}/project_memory.json"
      },
      "alwaysAllow": [
        "create_entities",
        "create_relations",
        "delete_entities",
        "delete_relations",
        "delete_observations",
        "open_nodes",
        "memory",
        "add_observations",
        "read_graph",
        "search_nodes"
      ],
      "disabled": false
    },
    "mcp-code-graph": {
      "command": "npx",
      "args": [
        "-y",
        "mcp-code-graph@latest"
      ],
      "env": {
        "CODEGPT_API_KEY": "sk-3f80b540-1a0c-4809-8335-eeea5f7d964a",
        "CODEGPT_ORG_ID": "08e85a15-51d0-48fc-93a1-3bcc345f7693",
        "CODEGPT_GRAPH_ID": "c003c34d-b4de-4d0e-8a37-ed2bb675c26c"
      },
      "alwaysAllow": [
        "find-direct-connections",
        "docs-semantic-search",
        "folder-tree-structure",
        "get-usage-dependency-links",
        "get-code",
        "get_usage_dependency_links",
        "find_direct_connections",
        "nodes-semantic-search"
      ],
      "disabled": false
    }
  }
}