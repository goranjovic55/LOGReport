{
  "mcpServers": {
    "project_memory": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-memory"
      ],
      "env": {
        "MEMORY_FILE_PATH": "./project_memory.json"
      },
      "alwaysAllow": [
        "create_entities",
        "create_relations",
        "add_observations",
        "delete_entities",
        "delete_relations",
        "delete_observations",
        "search_nodes",
        "open_nodes",
        "read_graph",
        "memory"
      ],
      "disabled": false
    }
  }
}